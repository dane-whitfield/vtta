{
  "name": "vtta",
  "version": "1.1.2",
  "description": "A CLI to bootstrap a new Vite project with customisable options",
  "type": "module",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dane-whitfield/vtta.git"
  },
  "bin": {
    "vtta": "./dist/cli.js"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build",
    "lint": "npm run biome:check",
    "biome:check": "biome check .",
    "biome:format": "biome format .",
    "prepare": "husky"
  },
  "keywords": [
    "vite",
    "react",
    "typescript",
    "tailwind",
    "cli"
  ],
  "author": "Dane Whitfield",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^10.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^10.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.5",
    "biome": "^0.3.3",
    "husky": "^9.1.6",
    "typescript": "^5.6.2"
  }
}
